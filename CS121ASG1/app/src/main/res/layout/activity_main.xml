<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.brandongomez.cs121asg1.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowOrderPreserved="false"
        android:columnCount="3"
        android:rowCount="3"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

        <ImageButton
            android:id="@+id/imageButton00"
            android:tag=""
            android:layout_row="0"
            android:layout_column="0"
            android:contentDescription="00"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:onClick="clickBoard"
            android:src="@drawable/nothing" />

        <ImageButton
            android:id="@+id/imageButton01"
            android:tag=""
            android:layout_row="0"
            android:layout_column="1"
            android:contentDescription="01"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:onClick="clickBoard"
            android:src="@drawable/nothing" />

        <ImageButton
            android:id="@+id/imageButton02"
            android:tag=""
            android:layout_row="0"
            android:layout_column="2"
            android:contentDescription="02"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:onClick="clickBoard"
            android:src="@drawable/nothing" />

        <ImageButton
            android:id="@+id/imageButton10"
            android:tag=""
            android:layout_row="1"
            android:layout_column="0"
            android:contentDescription="10"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:onClick="clickBoard"
            android:src="@drawable/nothing" />

        <ImageButton
            android:id="@+id/imageButton11"
            android:tag=""
            android:layout_row="1"
            android:layout_column="1"
            android:contentDescription="11"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:onClick="clickBoard"
            android:src="@drawable/nothing" />

        <ImageButton
            android:id="@+id/imageButton12"
            android:tag=""
            android:layout_row="1"
            android:layout_column="2"
            android:contentDescription="12"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:onClick="clickBoard"
            android:src="@drawable/nothing" />

        <ImageButton
            android:id="@+id/imageButton20"
            android:tag=""
            android:layout_row="2"
            android:layout_column="0"
            android:contentDescription="20"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:onClick="clickBoard"
            android:src="@drawable/nothing" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:id="@+id/imageButton21"
            android:tag=""
            android:layout_row="2"
            android:layout_column="1"
            android:contentDescription="21"
            android:onClick="clickBoard"
            android:src="@drawable/nothing" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:id="@+id/imageButton22"
            android:tag=""
            android:layout_row="2"
            android:layout_column="2"
            android:contentDescription="22"
            android:src="@drawable/nothing"
            android:onClick="clickBoard" />

    </GridLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:id="@+id/button"
        android:onClick="newGame"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout"
        android:layout_alignLeft="@+id/gridLayout"
        android:layout_alignStart="@+id/gridLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Go X"
        android:id="@+id/player"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
